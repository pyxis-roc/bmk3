#!/usr/bin/python3
# -*- mode: python -*-

import argparse
import yaml
import bmk3
import os
import sys

if __name__ == "__main__":
    p = argparse.ArgumentParser(description="Run a bmk3 script")
    p.add_argument("-f", dest="bmk3file", help="bmk3 script file", default="bmk3.yaml")
    args = p.parse_args()

    if not os.path.exists(args.bmk3file):
        print("ERROR: {args.bmk3file} does not exist.", file=sys.stderr)
        sys.exit(1)

